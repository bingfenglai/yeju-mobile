{
	"easycom": {
		"^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
	},
	
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		
		// 首页
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom" ,// 隐藏系统导航栏
					"navigationBarTextStyle": "white" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
				}
		},
		
		//消息页
		
		{
		    "path" : "pages/message/index",
		    "style" :                                                                                    
		    {
		        "navigationStyle": "custom" ,// 隐藏系统导航栏
		        "navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
		    }
		    
		},
			
		// 个人页
		
		{
			"path":"pages/my/index",
			"style": {
				"navigationStyle": "custom" ,// 隐藏系统导航栏
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		},
		
		// 登录页
		
		{
		  "path": "pages/login/index",
		  "style": {
		    "navigationBarTitleText": "椰居登录"
		  }
		},
		{
		  "path": "pages/login/code",
		  "style": {
		    "navigationBarTitleText": "获取验证码"
		  }
		},
		
		// 城市选择
		{
			"path":"pages/city-select/u-city-select",
			"style":{
				"navigationBarTitleText": "城市选择"
			}
		},
		
		//搜索页
		{
			"path":"pages/search/index",
			"style":{
				"navigationStyle": "custom" ,// 隐藏系统导航栏
				"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
			}
		},
		
		{
			"path":"pages/no-network/index",
			"style": {
				"navigationBarTitleText":"无法连接互联网"
			}
		}
		
		// 房源详情页
	    
        ,{
            "path" : "pages/house-details/house-details",
            "style":{
            	"navigationStyle": "custom" ,// 隐藏系统导航栏
            	"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
            
        }
        ,{
            "path" : "pages/message/message-details/index",
            "style":{
            	"navigationStyle": "custom" ,// 隐藏系统导航栏
            	"navigationBarTextStyle": "black" // 状态栏字体为白色，只能为 white-白色，black-黑色 二选一
            }
            
        }
		
	
      
    ],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uni-app",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	
	"tabBar": {
	  "color": "#909399",
	  "selectedColor": "#303133",
	  "borderStyle": "black",
	  "backgroundColor": "#ffffff",
	  "list": [
	    {
	     "pagePath": "pages/index/index",
	      "iconPath": "static/index.png",
	      "selectedIconPath": "static/index-selected.png",
	      "text": "首页"
	    },
		{
			"pagePath": "pages/message/index",
			"iconPath": "static/message/msg.png",
			"selectedIconPath": "static/message/msg-selected.png",
			"text": "消息"
		},
	    {
	      "pagePath": "pages/my/index",
	      "iconPath": "static/my/my.png",
	      "selectedIconPath": "static/my/my-selected.png",
	      "text": "我"
	    }
	  ]
	}
}
